// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum DofusClass {
  Feca
  Osamodas
  Enutrof
  Sram
  Xelor
  Ecaflip
  Eniripsa
  Iop
  Crâ
  Pandawa
  Sadida
  Sacrieur
  Roublard
  Zobal
  Steamer
  Eliotrope
  Huppermage
  Ouginak
  Forgelance
}

model User {
  id                String      @id @default(cuid())
  name              String?
  email             String?     @unique
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  accounts          Account[]
  sessions          Session[]
  characters        Character[] @relation("CharacterOwner")
  activeCharacterId String?
  activeCharacter   Character?  @relation("ActiveCharacter", fields: [activeCharacterId], references: [id])

  @@index([activeCharacterId])
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Server {
  id         Int         @id
  name       String
  region     String
  kind       String
  selections Selection[]
  characters Character[]
}

model Quest {
  id         Int         @id
  name       String
  category   String?
  level      Int?
  area       String?
  selections Selection[]
}

model Character {
  id        String     @id @default(cuid())
  userId    String
  serverId  Int
  name      String
  level     Int        @default(1)
  class     DofusClass
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation("CharacterOwner", fields: [userId], references: [id], onDelete: Cascade)

  server Server @relation(fields: [serverId], references: [id])

  activeForUsers User[] @relation("ActiveCharacter")

  // sélections/recherches créées avec ce perso
  posts Selection[]

  @@index([userId])
  @@index([serverId])
}

model Selection {
  id          String   @id @default(cuid())
  characterId String
  serverId    Int
  questId     Int
  note        String?
  createdAt   DateTime @default(now())

  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  server    Server    @relation(fields: [serverId], references: [id])
  quest     Quest     @relation(fields: [questId], references: [id])

  @@index([characterId])
  @@index([serverId, questId])
}
